<Window x:Class="BankomatWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankomatWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="298*"/>
            <ColumnDefinition Width="99*"/>
        </Grid.ColumnDefinitions>
        <DataGrid HorizontalAlignment="Left" ItemsSource="{Binding Path= Kontos}" AutoGenerateColumns="False" CanUserAddRows="False" Name="Gridbank" Grid.Column="0" Grid.Row="0" VerticalAlignment="Top">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path= Number, Mode=OneWay}" ClipboardContentBinding="{x:Null}" Header="Account no." Width="120"/>
                <DataGridTextColumn  Binding="{Binding Path= Name, Mode=OneWay}" ClipboardContentBinding="{x:Null}" Header="Name" Width="120"/>
                <DataGridTextColumn  Binding="{Binding Path= Balance, Mode=OneWay}" ClipboardContentBinding="{x:Null}" Header="Balance" Width="120"/>
                <DataGridTextColumn  Binding="{Binding Path= Limit, Mode=OneWay}" ClipboardContentBinding="{x:Null}" Header="Withdrawal Limit" Width="120*"/>

            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" VerticalAlignment="Bottom">
            <Button x:Name="ButAdd" Content="Neue Konto eröffnen" HorizontalAlignment="Left" Margin="5,5,0,5" VerticalAlignment="Top" Click="ButAdd_Click" Width="152" Height="20"/>

        </StackPanel>
    </Grid>
</Window>
